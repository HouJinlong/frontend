{
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  },
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "version": {
      "dependsOn": ["^version", "build"],
      "cache": false,
      "options": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "âœ¨ Features",
              "git": "âœ¨  A new feature"
            },
            {
              "type": "fix",
              "section": "ğŸ› Bug Fixes",
              "git": "ğŸ›  A bug fix"
            },
            {
              "type": "docs",
              "section": "ğŸ“ Documentation",
              "git": "ğŸ“  Documentation only changes"
            },
            {
              "type": "style",
              "section": "ğŸ’„ Styles",
              "git": "ğŸ’„  Styles only changes"
            },
            {
              "type": "refactor",
              "section": "ğŸ§¹ Code Refactoring",
              "git": "ğŸ§¹  A code change that neither fixes a bug nor adds a feature"
            },
            {
              "type": "perf",
              "section": "âš¡ï¸ Performance Improvements",
              "git": "âš¡ï¸  A code change that improves performance"
            },
            {
              "type": "test",
              "section": "âœ… Tests",
              "git": "âœ…  Adding missing tests or correcting existing tests"
            },
            {
              "type": "build",
              "section": "ğŸ› ï¸  Build System",
              "git": "ğŸ› ï¸   Changes that affect the build system or external dependencies"
            },
            {
              "type": "chore",
              "section": "ğŸ¡  Chores",
              "git": "ğŸ¡  Other changes that don't modify src or test files"
            },
            {
              "type": "ci",
              "section": "ğŸ¤– Continuous Integration",
              "git": "ğŸ¤–  Changes to our CI configuration files and scripts"
            }
          ]
        },
        "trackDeps": true,
        "changelogHeader": "# Changelog\n\n   ",
        "tagPrefix": "{projectName}@"
      }
    },
    "lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ]
    },
    "@nx/vite:test": {
      "cache": true,
      "inputs": ["default", "^default"]
    }
  },
  "generators": {
    "@nx/react": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "bundler": "vite",
        "babel": true
      },
      "library": {
        "style": "scss",
        "linter": "eslint",
        "unitTestRunner": "none",
        "bundler": "vite",
        "publishable": true
      },
      "component": {
        "style": "css"
      }
    },
    "@nx/js": {
      "library": {
        "unitTestRunner": "none",
        "bundler": "vite",
        "publishable": true
      }
    },
    "@nx/next": {
      "application": {
        "style": "css",
        "linter": "eslint"
      }
    }
  }
}
